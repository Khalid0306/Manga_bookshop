{% extends 'base.html.twig' %}

{% block title %}New Manga{% endblock %}

{% block stylesheets %}
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
        }
        h1 {
            color: #333;
        }
        .form-fields {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 15px;
            margin-bottom: 20px;
        }
        .form-fields > div {
            margin-bottom: 15px;
        }
        .form-fields label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }
        .form-fields input, 
        .form-fields select {
            width: 100%;
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
        .tags-section {
            grid-column: 1 / -1;
        }
        .tags-container {
            margin-top: 10px;
        }
        .tags-container label {
            display: inline-block;
            margin-right: 15px;
            font-weight: normal;
        }
        .btn {
            background: #4CAF50;
            color: white;
            border: none;
            padding: 10px 15px;
            cursor: pointer;
            border-radius: 4px;
        }
        .btn:hover {
            background: #45a049;
        }
        .navigation {
            margin-top: 20px;
        }
        .navigation a {
            display: inline-block;
            text-decoration: none;
            padding: 8px 15px;
            background: #2196F3;
            color: white;
            border-radius: 4px;
        }
        .navigation a:hover {
            background: #0b7dda;
        }
    </style>
{% endblock %}

{% block body %}
    <h1>Create new Manga</h1>

    {{ include('manga/_form.html.twig') }}

    <div class="navigation">
        <a href="{{ path('app_manga_index') }}">back to list</a>
    </div>
{% endblock %}